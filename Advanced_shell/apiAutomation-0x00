#!/bin/bash
# Script: apiAutomation-0x00
# Objective: Automate API request to Pokémon API for Pikachu
# Saves response to data.json, logs errors to errors.txt

API_URL="https://pokeapi.co/api/v2/pokemon/pikachu"
OUTPUT_FILE="data.json"
ERROR_FILE="errors.txt"

# Make the API request
response=$(curl -s -w "%{http_code}" -o "$OUTPUT_FILE" "$API_URL")
status_code=$response

# Check if request was successful
if [ "$status_code" -eq 200 ]; then
    echo "✅ Successfully fetched Pikachu data into $OUTPUT_FILE"
else
    echo "❌ Request failed with status code $status_code" | tee -a "$ERROR_FILE"
    rm -f "$OUTPUT_FILE"   # remove incomplete file
fi
